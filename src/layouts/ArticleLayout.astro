---
import BaseLayout from './BaseLayout.astro';
import ArticleMeta from '../components/ArticleMeta.astro';
import EmotionFeedback from '../components/EmotionFeedback.tsx';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    scene: string;
    difficulty: '入門' | '中級' | '進階';
    createdAt: string;
    verifiedAt: string;
    archived?: boolean;
    archivedReason?: string;
    discussionUrl?: string;
  };
}

const { frontmatter } = Astro.props;
const slug = Astro.url.pathname.replace(/^\/articles\//, '').replace(/\/$/, '');
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="max-w-3xl mx-auto px-4 py-8">
    <!-- Article Header -->
    <header class="mb-8">
      <div class="flex items-center gap-2 mb-4">
        <span class="text-sm px-3 py-1 rounded-full bg-brand/20 text-brand-light">
          {frontmatter.scene}
        </span>
        <span class={`text-sm px-3 py-1 rounded-full ${
          frontmatter.difficulty === '入門' ? 'bg-green-500/20 text-green-400' :
          frontmatter.difficulty === '中級' ? 'bg-yellow-500/20 text-yellow-400' :
          'bg-red-500/20 text-red-400'
        }`}>
          {frontmatter.difficulty}
        </span>
      </div>

      <h1 class="text-3xl font-bold mb-4 leading-tight">
        {frontmatter.title}
      </h1>

      <p class="text-text-secondary text-lg mb-4">
        {frontmatter.description}
      </p>

      <ArticleMeta
        createdAt={frontmatter.createdAt}
        verifiedAt={frontmatter.verifiedAt}
        archived={frontmatter.archived}
        archivedReason={frontmatter.archivedReason}
      />

      {frontmatter.archived && (
        <div class="mt-4 p-4 rounded-lg bg-red-500/10 border border-red-500/30">
          <p class="text-red-400 text-sm">
            ⚠️ 此文章已封存：{frontmatter.archivedReason || '內容可能已過時'}
          </p>
        </div>
      )}
    </header>

    <!-- Article Content -->
    <div class="prose">
      <slot />
    </div>

    <!-- Emotion Feedback -->
    <div class="mt-12 pt-8 border-t border-surface-lighter">
      <EmotionFeedback client:load slug={slug} />
    </div>

    <!-- Discussion Link -->
    {frontmatter.discussionUrl && (
      <div class="mt-8 p-6 rounded-lg bg-surface-light text-center">
        <p class="text-text-secondary mb-3">有問題？卡關了？一起討論！</p>
        <a
          href={frontmatter.discussionUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-brand hover:bg-brand-dark text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          前往 GitHub Discussions 討論
        </a>
      </div>
    )}
  </article>
</BaseLayout>
